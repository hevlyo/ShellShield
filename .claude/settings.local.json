{
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "Bash(bun --version:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run $CLAUDE_PROJECT_DIR/src/index.ts"
          }
        ]
      }
    ]
  }
}
